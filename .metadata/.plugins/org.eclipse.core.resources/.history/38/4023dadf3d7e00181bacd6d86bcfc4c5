choice = ''
valid_list = ['1','2','3','4','5','6']
while not choice in valid_list:
    choice = input("Choose a filter to use:\n" +
                   "1 - body - 745, 765\n" +
                   "2 - engine - 7E0, 7E8\n" +
                   "3 - cluster - 743, 763\n" +
                   "4- steering - 742, 762\n" +
                   "5 - ABS - 740, 760\n" +
                   "6 - airbag - 752, 772\n")
    if not choice in valid_list:
        print("Choose a valid option!\n")